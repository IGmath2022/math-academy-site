# Server
NODE_ENV=production
PORT=10000
MONGO_URL=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# CORS (comma-separated origins)
CORS_ORIGINS=https://ig-math-2022.onrender.com,https://<your-front>.pages.dev

# Report
REPORT_BASE_URL=https://ig-math-2022.onrender.com

# Aligo
ALIGO_API_KEY=<required>
ALIGO_USER_ID=<required>
ALIGO_SENDER_KEY=<required>
ALIGO_SENDER=<required phone number>

# Cloudflare R2 (S3-compatible)
R2_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=<required>
R2_SECRET_ACCESS_KEY=<required>
R2_BUCKET=<bucket-name>

# CRON
CRON_ENABLED_AUTO_LEAVE=0
AUTO_LEAVE_CRON=30 22 * * *
DAILY_REPORT_AUTO=0
DAILY_REPORT_CRON=30 10 * * *
